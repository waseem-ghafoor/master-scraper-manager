<p id="notice"><%= notice %></p>

<h1>Scraper Managers</h1>

<table>
  <thead>
    <tr>
      <th>Script Name</th>
      <th>Scheduled</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.name %></td>
        <td><%= script.schedule %></td>
        <td><%= script.status %></td>
        <td><%= link_to 'Show', script %></td>
        <td><%= link_to 'Edit', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

