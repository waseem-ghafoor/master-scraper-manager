<p id="notice"><%= notice %></p>

<h1>Scraper Managers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Script Name</th>
      <th>Scheduled_at</th>
      <th>Repeat_at (Hours)</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.name %></td>
        <td><%= script.schedule.in_time_zone("Central Time (US & Canada)") if script.schedule.present? %></td>
        <td><%= script.repeat_at %> </td>
        <td><%= show_status script.status %></td>
        <td><%= link_to 'Show Details', script %></td>
        <td><%= link_to 'Update', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

